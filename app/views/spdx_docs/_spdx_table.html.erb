<table class="table table-bordered table-spdx">

  <% spdx_docs.each do |spdx_doc| %>
    <tr>
      <td class="td-timestamp">
        <p class="greybox">
          <i class="icon-time"></i>
          <%= friendly_date(spdx_doc.created_at) %>
        </p>
      </td>

      <td class="td-main">
        <%= link_to spdx_doc.name, spdx_doc %>
      </td>

      <td class="td-controls greybox">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to(spdx_doc.upload.url, class: "btn") do %>
              <i class="icon-download-alt"></i>
              download
            <% end %>

            <a href="#doc_select" role="button" class="btn" data-toggle="modal" data-id="<%= spdx_doc.id %>">
              <i class="icon-exchange"></i>
              compare
            </a>
          </div>
        </div>
      </td>
    </tr>
  <% end %>
</table>